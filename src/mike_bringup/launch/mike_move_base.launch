<launch>

  <!-- Run the map server -->
  <node name="map_server" pkg="map_server" type="map_server" args="$(find mike_description)/maps/map.pgm 0.05"/>

  <!-- Run AMCL -->
  <include file="$(find mike_bringup)/launch/amcl_diff.launch" />


  <node pkg="move_base" type="move_base" respawn="false" name="move_base" output="screen">
    <rosparam file="$(find mike_bringup)/param/costmap_common_params.yaml" command="load" ns="global_costmap" />
    <rosparam file="$(find mike_bringup)/param/costmap_common_params.yaml" command="load" ns="local_costmap" />
    <rosparam file="$(find mike_bringup)/param/local_costmap_params.yaml" command="load" />
    <rosparam file="$(find mike_bringup)/param/global_costmap_params.yaml" command="load" />
    <rosparam file="$(find mike_bringup)/param/base_local_planner_params.yaml" command="load" />
    <rosparam file="$(find mike_bringup)/param/move_base_params.yaml" command="load" />
    <rosparam file="$(find mike_bringup)/param/global_planner_params.yaml" command="load" />
    <rosparam file="$(find mike_bringup)/param/navfn_global_planner_params.yaml" command="load" />
  </node>
</launch>
